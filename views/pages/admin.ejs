<%- include('../partials/head') -%> 

<%- include('../partials/nav') -%> 

    <div class="main-outer-container">
        <main class="main-content">
            <div class="help"><p>?</p>
                <div class="help-tooltip">Admin can create new dining options, and edit or delete existing options.</div>
            </div>
            <div class="admin-btn-box">
                <form action="/admin/create" method="GET">
                        <button type="submit">create NEW restaurant <span> !</span></button>
                </form>
            </div>

            <!-- Add option to sort from a-z, etc -->

            <div class="admin">
            <% for (restaurant of allRestaurants) { %>
                <div class="admin-box">
                        <div>
                            <h4><%= restaurant.name %></h4>

                            <div class="admin-btn-box">
                                <form action="/admin/update/<%= restaurant._id %>" method="GET">
                                        <button type="submit">edit<span> !</span></button>
                                </form>
                                <form action="/app/<%= restaurant._id%>?_method=DELETE" method="POST" enctype="x-www-form-urlencoded">
                                    <button type="submit">delete<span> !</span></button>
                                </form>
                            </div>
                            
                        </div>
                </div>
            <% } %>
            </div>
            <form action="/logout" method="GET">
                <button type="submit">logout <span> !</span></button>
            </form>
        </main>
    </div>

    <%- include('../partials/footer') -%> 