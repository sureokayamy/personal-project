
<%- include('../partials/head') -%> 

<%- include('../partials/nav') -%> 

    <div class="main-outer-container">
        <main class="main-content">
            <div class="help"><p>?</p>
                <div class="help-tooltip"></div>
            </div>
            <form action="/app/<%= restaurant._id %>?_method=PUT" method="POST" enctype="x-www-form-urlencoded">
                <fieldset>
                    <div class="form-input">
                        <label for="name">Name:</label>
                        <input type="text" name="name" id="name" minlength="1" value="<%= restaurant.name %>" required />
                    </div>
                    <div class="form-input">
                        <label for="cuisine">Cuisine categories:</label>
                        <input type="array" name="cuisine" id="cuisine" minlength="1" value="<%= restaurant.cuisine %>" required />
                    </div>
                    <div class="form-input">
                        <label for="emoji">Emoji code (decimal):</label>
                        <input type="string" name="emoji" id="emoji" minlength="1" value="<%= restaurant.emoji%>" />
                    </div>
                    <div class="form-input">
                        <label for="distance">Distance: 
                            <select id="distance" name="distance" value="<%= restaurant.distance %>" required>
                                <option value="1">≤1 mile</option>
                                <option value="2">≤ 2 miles</option>
                                <option value="3">≤ 5 miles</option>
                                <option value="4">> 5 miles</option>
                            </select> 
                    </div>
                    <div class="form-input">
                        <label for="priceRange">Price Range:</label>
                        <input type="number" name="priceRange" id="priceRange" min="1" max="5" value="<%= restaurant.priceRange %>" required />
                    </div>

                </fieldset>
                    <button type="submit">update<span >!</span>
            </form>
            <a href="/admin"><button>cancel</button></a>

        </main>
    </div>

    <%- include('../partials/footer') -%> 